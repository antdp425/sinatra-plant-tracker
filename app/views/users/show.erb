<!-- Show user and their list of plants as links to /plant/:id -->

  <div class="col-md-8 col-md-offset-2">
    <h2><%= @current_user.username %>'s Plants</h2>
    <div class="plants">
      <p>Choose a plant to see more information!</p>
      <ul>
        <% @current_user.plants.each do |plant| %>
            <li><a href="/plants/<%= plant.id%>"> <%= plant.name %></a></li>
        <% end %>    
      </ul> <br>
      <button type="submit" onclick="window.location.href = '/plants/new';">Add a Plant</button>
    </div>

    <div class="sidebar">
      <img src="../images/plants.jpg" class="side">
    </div>

  </div>