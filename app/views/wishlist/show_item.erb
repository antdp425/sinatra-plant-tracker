<div class="nav"> 
  <div class="left">
    <h3>Eleplant - Never Forget Your Plants Again! </h3> 
  </div>

  <div class="right">
    <a href="/plants">My Plants</a> | <a href="/wishlist">My Wishlist</a> | <a href="/logout">Logout</a>
  </div>
</div>

<div class="body"> 
  <ul>
    <% @current_user.wishlist.each do |item| %>
      <li> <a href="/wishlist/<%=item.id%>"> <%= item.item_name %> </a></li>
    <% end %>
  </ul> <br>
    <button type="submit" onclick="window.location.href = '/wishlist/new';">Add a Plant</button>
</div>

<div class="sidebar"> 
  <%= @item.item_name %>
    <div style="float: left; width: 50%">
      <form method="post" action="/wishlist/<%=@item.id%>">
        <input id="hidden" type="hidden" name="_method" value="DELETE">
        <button type="submit" class="side">Remove From Wishlist</button>
      </form>
    </div>
  <div style="float: right; width: 50%">
    <form method="post" action="/wishlist-create/<%=@item.id%>">
      <input id="hidden" type="hidden" name="_method" value="DELETE">
      <button type="submit" class="side">Add to My Plants</button>
    </form>
  </div>
</div>